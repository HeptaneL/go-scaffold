package model

import "{{ .Module }}/pkg/mysql"

type User struct {
	Id         int64 `gorm:"column:id;primaryKey;autoIncrement" json:"id"`
	CreateTime int64 `gorm:"column:create_time" json:"create_time"` // 创建时间
	UpdateTime int64 `gorm:"column:update_time" json:"update_time"` // 更新时间
}

func (o *User) TableName() string {
	return "users"
}

func FindUserById(id int64) User {
	var user User
	mysql.GetDb().Model(&User{}).
		Where("id = ?", id).
		Find(&user)
	return user
}
